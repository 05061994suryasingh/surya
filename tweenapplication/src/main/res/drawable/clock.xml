<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <gradient
                android:endColor="#ffffff"
                android:gradientRadius="40"
                android:angle="180"
                android:centerColor="#6604ff4f"
                android:startColor="#6604ff4f"
                android:type="radial"
                android:useLevel="false"/>

            <size android:height="100dp"
                android:width="100dp"/>
            <stroke
                android:width="2dp"
                android:color="#99000000" />
        </shape>
    </item>
    <item
        android:bottom="44dp"
        android:left="48dp"
        android:right="48dp"
        android:top="5dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#060606"></solid>
        </shape>
    </item>

</layer-list>
